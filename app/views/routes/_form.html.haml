= form_for @route do |f|
  - if @route.errors.any?
    #error_explanation
      %h2= "#{pluralize(@route.errors.count, "error")} prohibited this route from being saved:"
      %ul
        - @route.errors.full_messages.each do |msg|
          %li= msg
  -Station.all.each do |station|
    .field
      = label_tag station.name
      - route_station=station.route_stations.where(station_id: station, route_id: @route).first
      = select_time (route_station.blank? ? nil : route_station.arrival_time ), {include_blank:true, prefix: "arrival_time[#{station.id}]"}
  .field
    = f.label :monday
    = f.check_box :monday
  .field
    = f.label :tuesday
    = f.check_box :tuesday
  .field
    = f.label :wednesday
    = f.check_box :wednesday
  .field
    = f.label :thursday
    = f.check_box :thursday
  .field
    = f.label :friday
    = f.check_box :friday
  .field
    = f.label :saturday
    = f.check_box :saturday
  .field
    = f.label :sunday
    = f.check_box :sunday
  .actions
    = f.submit 'Save'
