%p#notice= notice

%p
  %b Start station:
  = @route.start.present? ? @route.start.name : nil
%p
  %b End station:
  = @route.end.present? ? @route.end.name : nil
%p
  %b Skipped stations:
  = @route.skipped_stations.map{|s| s.name}.join(", ")

%p
  %b Monday:
  = @route.monday
%p
  %b Tuesday:
  = @route.tuesday
%p
  %b Wednesday:
  = @route.wednesday
%p
  %b Thursday:
  = @route.thursday
%p
  %b Friday:
  = @route.friday
%p
  %b Saturday:
  = @route.saturday
%p
  %b Sunday:
  = @route.sunday


= link_to 'Edit', edit_route_path(@route)
\|
= link_to 'Back', routes_path
