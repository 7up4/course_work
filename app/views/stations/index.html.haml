%h1= t('app.stations.index')

%table
  %thead
    %tr
      %th= Station.human_attribute_name(:name)
      %th= Station.human_attribute_name(:number)
      %th= Station.human_attribute_name(:tariff_zone)
      %th
      %th
      %th

  %tbody
    - @stations.each do |station|
      %tr
        %td= station.name
        %td= station.number
        %td= station.tariff_zone.present? ? station.tariff_zone.name : nil
        %td
          = link_to station, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_station_path(station), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to station, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times

%br

= link_to t('app.stations.new-button'), new_station_path
