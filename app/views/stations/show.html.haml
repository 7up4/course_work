=breadcrumb_tag do
  %li.active
    = link_to(@station.name, @station)
  %li
    = link_to 'Станции', stations_path
%p#notice= notice

%p
  %b= Station.human_attribute_name(:name)+':'
  = @station.name
%p
  %b= Station.human_attribute_name(:number)+':'
  = @station.number
%p
  %b= Station.human_attribute_name(:tariff_zone)+':'
  = @station.tariff_zone ? @station.tariff_zone.name : nil
