%h1= t('app.tariff_zones.index')

%table
  %thead
    %tr
      %th= TariffZone.human_attribute_name(:name)
      %th
      %th
      %th

  %tbody
    - @tariff_zones.each do |tariff_zone|
      %tr
        %td= tariff_zone.name
        %td
          = link_to tariff_zone, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_tariff_zone_path(tariff_zone), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to tariff_zone, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times

%br

= link_to t('app.tariff_zones.new-button'), new_tariff_zone_path
