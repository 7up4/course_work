=breadcrumb_tag do
  %li.active
    Станции
  %li
    Администрирование

.page-header
  %h1= t('app.stations.index')

%table.table.table-hover.table-striped
  %caption
    = link_to new_station_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.station')
  %thead
    %tr
      %th= Station.human_attribute_name(:name)
      %th= Station.human_attribute_name(:number)
      %th= Station.human_attribute_name(:tariff_zone)
      %th
  %tbody
    - @stations.each do |station|
      %tr
        %td.center= station.name
        %td.center= station.number
        %td.center= station.tariff_zone.present? ? station.tariff_zone.name : nil
        %td.right
          = link_to station, class: 'btn btn-warning' do
            = fa_icon :eye
            = t('buttons.show')
          = link_to edit_station_path(station), class: 'btn btn-info' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to station, :method => :delete, :data => { :confirm => t('buttons.confirm.station') }, class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
